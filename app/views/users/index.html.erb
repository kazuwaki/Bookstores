<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <%= render "info", user: current_user %>
        <%= render "books/create", book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
    <h1>Users</h1>

    <table class="table">
        <thead>
            <tr>
            <th>iamge</th>
                <th>name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td><%= image_tag user.get_profile_image(100,100) %></td>
                <td><%= user.name %></td>
                <td>
                    <% if current_user.following?(user) %>
                        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-success" %>
                    <% else %>
                        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-info" %>
                    <% end %>
                </td>
                <td><%= link_to "Show", user_path(user)  %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>