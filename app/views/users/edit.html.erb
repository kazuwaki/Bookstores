<div class='container'>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <%= render "books/errors", object: @user %>
        <h1>User Edit</h1>

        <%= form_with model: @user do |f| %>

            <div class="field">
                <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*"  %>
            </div>

            <div class="field">
                <%= f.label :name %><br>
                <%= f.text_field :name %>
            </div>

            <div class="field">
                <%= f.label :introduction %><br>
                <%= f.text_area :introduction %>
            </div>

            <div class="field">
                <%= f.submit "Edit user" %>
            </div>

        <% end %>
        </div>
    </div>
</div>