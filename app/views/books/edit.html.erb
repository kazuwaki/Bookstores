<div class='container'>
    <div class='row'>
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :Opinion %><br>
  <%= f.text_field :body %>
</div>

<div class="field">
   <%= f.submit "Editing Book" %>
</div>

<% end %>

<p>
  <%= link_to "Show", book_path(@book.id) %>|
  <%= link_to "Back", books_path %>
</p>
</div>
</div>
</div>